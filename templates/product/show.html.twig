{% extends 'base.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-center text-blue-700">Détails du produit</h1>

        <table class="min-w-full bg-white shadow rounded-lg overflow-hidden mb-6">
            <tbody>
                <tr class="border-b border-gray-200">
                    <th class="text-left px-6 py-3 font-semibold text-gray-700 w-1/3">ID</th>
                    <td class="px-6 py-3">{{ product.id }}</td>
                </tr>
                <tr class="border-b border-gray-200 bg-gray-50">
                    <th class="text-left px-6 py-3 font-semibold text-gray-700">Nom</th>
                    <td class="px-6 py-3">{{ product.nomProduit }}</td>
                </tr>
                <tr class="border-b border-gray-200">
                    <th class="text-left px-6 py-3 font-semibold text-gray-700">Description</th>
                    <td class="px-6 py-3">{{ product.descriptionProduit }}</td>
                </tr>
                <tr class="border-b border-gray-200 bg-gray-50">
                    <th class="text-left px-6 py-3 font-semibold text-gray-700">Prix</th>
                    <td class="px-6 py-3">{{ product.prixProduit }} €</td>
                </tr>
                <tr>
                    <th class="text-left px-6 py-3 font-semibold text-gray-700">Catégorie</th>
                    <td class="px-6 py-3">{{ product.categorieProduit }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex justify-between">
            <a href="{{ path('app_product_index') }}" class="text-blue-600 hover:underline">
                ← Retour à la liste
            </a>

            <div class="space-x-4">
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="text-green-600 hover:underline">
                    Modifier
                </a>

                {{ include('product/_delete_form.html.twig', { 'product': product }) }}
            </div>
        </div>
    </div>
{% endblock %}
