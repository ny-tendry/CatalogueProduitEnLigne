        <h1 class="text-3xl font-bold text-center text-blue-700 mb-6">Modifier le produit</h1>

        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            {{ include('product/_form.html.twig', { 'button_label': 'Mettre à jour' }) }}
